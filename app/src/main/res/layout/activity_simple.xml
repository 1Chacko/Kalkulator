<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:weightSum="6">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operand"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:textSize="30sp"
            android:gravity="left"
            android:textColor="@android:color/background_light" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultt"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:paddingRight="15dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="15">

        <Button
            android:text="Bksp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="back" />

        <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:id="@+id/button8"
            android:onClick="clear" />

        <Button
            android:text="Â±"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/button7"
            android:onClick="changeSign" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button13"
            android:layout_weight="1"
            android:onClick="putSeven" />

        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button12"
            android:layout_weight="1"
            android:onClick="putEight" />

        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button11"
            android:layout_weight="1"
            android:onClick="putNine" />

        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button10"
            android:layout_weight="1"
            android:onClick="divide" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button17"
            android:layout_weight="1"
            android:onClick="putFour" />

        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button16"
            android:layout_weight="1"
            android:onClick="putFive" />

        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button15"
            android:layout_weight="1"
            android:onClick="putSix" />

        <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button14"
            android:layout_weight="1"
            android:onClick="multiply" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button21"
            android:layout_weight="1"
            android:onClick="putOne" />

        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button20"
            android:layout_weight="1"
            android:onClick="putTwo" />

        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button19"
            android:layout_weight="1"
            android:onClick="putThree" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button18"
            android:layout_weight="1"
            android:onClick="subtract" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button25"
            android:layout_weight="1"
            android:onClick="putZero" />

        <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button24"
            android:layout_weight="1"
            android:onClick="dot" />

        <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button23"
            android:layout_weight="1"
            android:onClick="equal" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button22"
            android:layout_weight="1"
            android:onClick="add" />
    </LinearLayout>
</LinearLayout>